{
  "name": "openwpclub/phone-order-for-woocommerce",
  "description": "Fast order creation with just a phone number for WooCommerce",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "OpenWPClub",
      "email": "info@openwpclub.com",
      "homepage": "https://openwpclub.com"
    }
  ],
  "require": {
    "php": ">=8.0"
  },
  "require-dev": {
    "php-stubs/woocommerce-stubs": "^9.0",
    "php-stubs/wordpress-stubs": "^6.7",
    "phpstan/phpstan": "^2.0",
    "szepeviktor/phpstan-wordpress": "^2.0",
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "OpenWPClub\\PhoneOrder\\": "src/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "phpcs": "phpcs",
    "phpcbf": "phpcbf",
    "phpstan": "phpstan analyse -c phpstan.neon --memory-limit=1G"
  }
}
